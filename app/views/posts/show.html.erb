<% provide(:title, @post.title) %>

<h1 class="title">
  <%= @post.title %>
</h1>

<h3 class="subtitle">
  <%= @post.title %>
</h3>

<p class="date">
  Submitted <%= time_ago_in_words(@post.created_at) %> ago.
</p>

<p class="tag_list">
  <%= render @post.tags %>
</p>

<p class="body">
  <%= @post.body %>
</p>